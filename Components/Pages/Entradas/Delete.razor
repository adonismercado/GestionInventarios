@page "/Entradas/Delete/{EntradaId:int}"
@using AP1GestionInventario.Models
@using AP1GestionInventario.Services
@using Microsoft.AspNetCore.Authorization
@inject EntradaService entradaService
@inject NavigationManager navigationManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Eliminar Entrada</PageTitle>

<div class="container mt-4">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h3><i class="bi bi-trash"></i> Eliminar Entrada de Inventario</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger">¿Está seguro de que desea eliminar esta entrada?</h4>
            <p class="text-muted">Esta acción revertirá las cantidades del inventario.</p>
            <hr />

            @if (entrada != null)
            {
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">EntradaId:</dt>
                            <dd class="col-sm-8">@entrada.EntradaId</dd>

                            <dt class="col-sm-4">Fecha:</dt>
                            <dd class="col-sm-8">@entrada.Fecha.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4">Concepto:</dt>
                            <dd class="col-sm-8">@entrada.Concepto</dd>

                            <dt class="col-sm-4">Total:</dt>
                            <dd class="col-sm-8">@entrada.Total.ToString("C")</dd>
                        </dl>
                    </div>
                </div>

                <h5 class="mt-3">Detalle de Productos:</h5>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-secondary">
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Costo</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in entrada.EntradaDetalles)
                            {
                                <tr>
                                    <td>@detalle.Producto?.Descripcion</td>
                                    <td>@detalle.Cantidad</td>
                                    <td>@detalle.Costo.ToString("C")</td>
                                    <td>@detalle.Subtotal.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!string.IsNullOrEmpty(mensaje))
                {
                    <div class="alert alert-danger" role="alert">
                        @mensaje
                    </div>
                }

                <div class="d-flex justify-content-between mt-3">
                    <button type="button" @onclick="Volver" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </button>
                    <button type="button" @onclick="Eliminar" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirmar Eliminación
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    Entrada no encontrada.
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int EntradaId { get; set; }

    public Entrada? entrada { get; set; }
    private string mensaje = "";

    protected override async Task OnInitializedAsync()
    {
        entrada = await entradaService.Buscar(EntradaId);
    }

    private async Task Eliminar()
    {
        try
        {
            var eliminado = await entradaService.Eliminar(EntradaId);

            if (eliminado)
            {
                navigationManager.NavigateTo("/Entradas");
            }
            else
            {
                mensaje = "No se pudo eliminar la entrada.";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error: {ex.Message}";
        }
    }

    private void Volver()
    {
        navigationManager.NavigateTo("/Entradas");
    }
}