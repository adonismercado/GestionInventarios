@page "/Productos/Create"
@using AP1GestionInventario.Models
@using AP1GestionInventario.Services
@using Microsoft.AspNetCore.Authorization
@inject ProductoService productoService
@inject NavigationManager navigationManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Crear Producto</PageTitle>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h3><i class="bi bi-plus-circle"></i> Crear Producto</h3>
        </div>
        <div class="card-body">
            <EditForm Model="producto" OnValidSubmit="Guardar">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="form-label">Descripción:</label>
                    <InputText @bind-Value="producto.Descripcion" class="form-control" />
                    <ValidationMessage For="@(() => producto.Descripcion)" class="text-danger" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Costo:</label>
                        <InputNumber @bind-Value="producto.Costo" class="form-control" />
                        <ValidationMessage For="@(() => producto.Costo)" class="text-danger" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Precio:</label>
                        <InputNumber @bind-Value="producto.Precio" class="form-control" />
                        <ValidationMessage For="@(() => producto.Precio)" class="text-danger" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Existencia:</label>
                    <input type="number" value="@producto.Existencia" class="form-control" disabled readonly />
                    <small class="text-muted">La existencia se actualiza automáticamente con las entradas</small>
                </div>

                @if (!string.IsNullOrEmpty(mensaje))
                {
                    <div class="alert alert-@(esError ? "danger" : "success")" role="alert">
                        @mensaje
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <button type="button" @onclick="Volver" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    public Producto producto { get; set; } = new Producto();
    private string mensaje = "";
    private bool esError = false;

    private async Task Guardar()
    {
        try
        {
            var guardado = await productoService.Guardar(producto);

            if (guardado)
            {
                mensaje = "Producto guardado correctamente";
                esError = false;
                await Task.Delay(1500);
                navigationManager.NavigateTo("/Productos");
            }
            else
            {
                mensaje = "No se pudo guardar el producto";
                esError = true;
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error: {ex.Message}";
            esError = true;
        }
    }

    private void Volver()
    {
        navigationManager.NavigateTo("/Productos");
    }
}